<!DOCTYPE html>
<html>
  <% erb :header %>

  <body>
    <div ='flash'
      <% if flash[:errors] && !flash[:errors].empty? %>
        <ul id='errors'>
            <% flash[:errors].each do |error| %>
              <li><%= error %></li>
            <% end %>
        </ul>
      <% end %>
    </div>
    <% if current_user %>
      Welcome, <%= current_user.email %>!
      <form method='post' action='/sessions'>
        <input type='hidden' name='_method' value='delete'>
        <input type='submit' value='Sign Out'>
      </form>
    <% end %>
    <%= yield %>
  </body>
</html>
