<!DOCTYPE html>
<html>
  <% erb :header %>

  <body>
    <div ='flash'
      <% if flash[:errors] && !flash[:errors].empty? %>
        <ul id='errors'>
            <% flash[:errors].each do |error| %>
              <li><%= error %></li>
            <% end %>
        </ul>
      <% end %>
    </div>
    <%= yield %>
  </body>
</html>
